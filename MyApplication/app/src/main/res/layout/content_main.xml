<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mom.lirrapp.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:id="@+id/imageView"
        android:src="@drawable/train"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/textView"
        android:text="iLIRR"
        android:textStyle="bold"
        android:textColor="#014cbc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:id="@+id/monthlyCard"
        android:src="@drawable/ic_local_movies_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Montly Pass"
        android:id="@+id/textView2"
        android:textColor="#104d93"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_below="@+id/monthlyCard"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/schedule"
        android:src="@drawable/ic_train_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/delay"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Schedule and Fares"
        android:textColor="#104d93"
        android:textSize="12dp"
        android:textStyle="bold"
        android:id="@+id/textView3"
        android:layout_below="@+id/schedule"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <ImageButton
        android:id="@+id/delay"
        android:src="@drawable/ic_error_outline_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/monthlyCard"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="47dp"
        android:layout_marginEnd="47dp" />

    <TextView
        android:id="@+id/delays"
        android:text="Report Issues"
        android:textStyle="bold"
        android:textColor="#104d93"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignRight="@+id/delay"
        android:layout_alignEnd="@+id/delay" />

    <ImageButton
        android:id="@+id/Twitter"
        android:src="@drawable/ic_action_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/monthlyCard"
        android:layout_alignEnd="@+id/monthlyCard" />

    <TextView
        android:id="@+id/twitterText"
        android:text="#LIRR"
        android:paddingLeft="5dp"
        android:textColor="#104d93"
        android:textStyle="bold"
        android:layout_below="@id/Twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
